application/octet-stream ; echo %s "can be anything..."                    ; copiousoutput
text/html                ; /usr/local/bin/elinks  -dump %s ; nametemplate=%s.html ; copiousoutput
application/pdf          ; open -a /Applications/Preview.app %s            ; copiousoutput
image/*                  ; open -a /Applications/Preview.app %s            ; copiousoutput
audio/*                  ; open -a /Applications/QuickTime\ Player.app %s  ; copiousoutput
video/*                  ; open -a /Applications/MplayerX.app %s           ; copiousoutput
